@using ProjetoFamiliaAdvogado.Repository
@using ProjetoFamiliaAdvogado.Model.Login

@inject NavigationManager NavManager;
@inject IConsulta_Local iConsultaLocal

<div class="top-row ps-3 navbar navbar-dark navbar-expand-md">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Menu</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="inicio" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
    </nav>
    <nav class="nav-item px-3">
        <NavLink class="nav-link" href="inicioCliente">
            <span class="oi oi-person" aria-hidden="true"></span> Cliente
        </NavLink>
    </nav>
    <nav class="nav-item px-3">
        <NavLink class="nav-link" href="audienciaInicio">
            <span class="oi oi-spreadsheet" aria-hidden="true"></span> Audiencia
        </NavLink>
    </nav>
    <nav class="nav-item px-3">
        <NavLink class="nav-link" href="InicioObservacao">
            <span class="oi oi-clipboard" aria-hidden="true"></span> Observações
        </NavLink>
    </nav>
    <nav class="nav-item px-3">
        <NavLink class="nav-link" href="configuracao">
            <span class="oi oi-cog" aria-hidden="true"></span> Configurações
        </NavLink>
    </nav>
    <nav class="nav-item px-3 mt-auto">
        <NavLink class="nav-link" href="#" @onclick="Sair">
            <span class="oi oi-account-logout" aria-hidden="true"></span> Sair
        </NavLink>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    List<LoginSessaoModel> loginSessaoModels;

    protected async override Task OnInitializedAsync()
    {
        loginSessaoModels = await iConsultaLocal.GetAllLoginGeral();
    }

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void Sair()
    {
        iConsultaLocal.DeleteLoginGeral(loginSessaoModels[0]);

        NavManager.NavigateTo("/");
    }
}
